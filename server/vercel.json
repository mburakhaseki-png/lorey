{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "functions": {
    "api/extract/file.js": {
      "maxDuration": 30
    },
    "api/extract/url.js": {
      "maxDuration": 30
    },
    "api/extract/youtube.js": {
      "maxDuration": 30
    },
    "api/generate/story.js": {
      "maxDuration": 300
    },
    "api/generate/image.js": {
      "maxDuration": 120
    },
    "api/generate/quiz.js": {
      "maxDuration": 30
    },
    "api/health.js": {
      "maxDuration": 10
    }
  }
}

